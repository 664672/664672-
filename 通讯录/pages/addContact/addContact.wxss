/* addContact.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.input-field {
  width: 90%;
  height: 80rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #f5f5f5;
  font-size: 30rpx;
}

.button-area {
  display: flex;
  width: 90%;
  justify-content: space-between;
  margin-top: 40rpx;
}

.save-button {
  flex: 1;
  height: 80rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
}

.delete-button {
  flex: 1;
  height: 80rpx;
  margin-left: 10rpx;
  border-radius: 10rpx;
  background-color: #FF4D4D;
  color: white;
  font-size: 28rpx;
}
