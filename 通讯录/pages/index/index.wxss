/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.search-area {
  display: flex;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  background-color: #f5f5f5;
}

.add-contact-btn {
  height: 80rpx;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border-radius: 40rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
}

.contact-list {
  width: 100%;
  margin-top: 40rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.contact-name, .contact-phone {
  font-size: 30rpx;
  color: #333;
}
